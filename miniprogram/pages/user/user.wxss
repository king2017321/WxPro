/* pages/user/user.wxss */

.operateArea {
  margin: 30rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.opImg {
  width: 130rpx;
  height: 130rpx;
  margin: 30rpx 0rpx;
  border-radius: 50%;
}

.btnArea{
  display: flex;
  justify-content: space-around;
}

.opText {
  font-size: 30rpx;
}

.opBtn {
  font-size: 20rpx;
  background-color: #eee;
  color: #9cf;
  border-radius: 70rpx;
  margin: 0 10rpx;
}

.opBtn::after {
  border-radius: 70rpx;
  border: none;
}

.checkBtn {
  width: 45%;
  font-size: 30rpx;
  background-color: #CCCCCC;
  color: #999999;
  border-radius: 0rpx;
}

.checkBtning{
  background-color: #0099FF;
  color: #FFFFFF
}

.checkBtn::after {
  border: none;
  content: none;
}

.showBox{
  margin: 0rpx 20rpx;
}

.boxArea{
  margin: 40rpx 0;
  display: flex;
  justify-content: flex-start;
  align-content: center;
}

.boxImg{
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}
